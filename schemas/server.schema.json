{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Server Configuration",
  "type": "object",
  "required": ["id", "name", "transport", "tools"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Unique identifier for the server"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable name for the server"
    },
    "description": {
      "type": "string",
      "description": "Description of what this server does"
    },
    "version": {
      "type": "string",
      "default": "1.0.0",
      "description": "Configuration version"
    },
    "transport": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "enum": ["stdio", "sse", "http"],
          "description": "Transport mechanism"
        },
        "command": {
          "type": "string",
          "description": "Command to execute (for stdio transport)"
        },
        "args": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Arguments for the command (stdio transport)"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL endpoint (for sse/http transports)"
        },
        "env": {
          "type": "object",
          "patternProperties": {
            "^[A-Z_][A-Z0-9_]*$": {"type": "string"}
          },
          "description": "Environment variables to set"
        },
        "timeout": {
          "type": "integer",
          "minimum": 1,
          "maximum": 300,
          "default": 30,
          "description": "Connection timeout in seconds"
        },
        "headers": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {"type": "string"}
          },
          "description": "HTTP headers (for http transport)"
        }
      },
      "allOf": [
        {
          "if": {"properties": {"type": {"const": "stdio"}}},
          "then": {"required": ["command"]}
        },
        {
          "if": {"properties": {"type": {"enum": ["sse", "http"]}}},
          "then": {"required": ["url"]}
        }
      ]
    },
    "tools": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_]+$",
            "description": "Tool name (must match MCP server's tool name)"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "What this tool does"
          },
          "parameters": {
            "type": "object",
            "description": "JSON Schema for tool parameters"
          },
          "ui_config": {
            "type": "object",
            "properties": {
              "category": {
                "type": "string",
                "description": "Tool category for UI grouping"
              },
              "icon": {
                "type": "string",
                "description": "Icon name for UI display"
              },
              "requires_confirmation": {
                "type": "boolean",
                "default": false,
                "description": "Whether tool requires user confirmation"
              },
              "dangerous": {
                "type": "boolean",
                "default": false,
                "description": "Mark as potentially dangerous operation"
              }
            }
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["description", "parameters"],
              "properties": {
                "description": {"type": "string"},
                "parameters": {"type": "object"}
              }
            },
            "description": "Usage examples for this tool"
          }
        }
      }
    },
    "capabilities": {
      "type": "array",
      "items": {
        "enum": ["resources", "tools", "prompts", "logging"]
      },
      "description": "MCP capabilities this server supports"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "author": {"type": "string"},
        "license": {"type": "string"},
        "repository": {"type": "string", "format": "uri"},
        "documentation": {"type": "string", "format": "uri"},
        "tags": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    }
  }
}